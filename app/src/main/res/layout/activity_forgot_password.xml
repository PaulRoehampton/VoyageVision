<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract_background">


    <EditText
        android:id="@+id/enterEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_reset_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:drawableStart="@drawable/email_icon40"
        android:background="@drawable/rounded_textbox"
        android:hint="Enter your e-mail"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="304dp"
        android:background="@drawable/rounded_button_background"
        android:text="Reset Password"
        android:paddingHorizontal="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_resetBackArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/arrow_back_40" />

    <TextView
        android:id="@+id/txt_titleResetPass"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_above="@+id/enterEmailText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="145dp"
        android:layout_toEndOf="@+id/txt_resetBackArrow"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="25sp" />

</RelativeLayout>
