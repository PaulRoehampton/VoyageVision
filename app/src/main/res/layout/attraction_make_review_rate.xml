<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/attractionTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attraction Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/attractionDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Attraction description will be displayed here." />

    <TextView
        android:id="@+id/reviewsLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reviews"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/reviewsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/reviewEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Write your review here" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3"
        android:numStars="5"
        android:stepSize="1" />


    <Button
        android:id="@+id/submitReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_button_background"
        android:paddingHorizontal="20dp"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:text="Submit" />

</LinearLayout>
