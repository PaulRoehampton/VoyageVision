<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract_background">

    <ImageView
        android:id="@+id/editProfileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/edit_icon40" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/menu_icon40" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""

        android:textColor="@color/yellow"
        android:textSize="30sp" />


    <Button
        android:id="@+id/findNearbyAttractionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_button_background"
        android:text="Find Nearby Attractions"
        android:textSize="20sp" />

    <Button
        android:id="@+id/planItineraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findNearbyAttractionsButton"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_button_background"
        android:text="Plan Your Itinerary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addNewAttraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/planItineraryButton"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_button_background"
        android:text="Add a new attraction"
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>

